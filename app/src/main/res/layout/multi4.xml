<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicplay.yuhwan.multi3">

    <TextView
        android:id="@+id/grouptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="4-1. 모둠원별 시나리오 쓰기 - 모둠원n     (클릭 후 입력, 동시 접속 입력 가능)"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/GroupTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grouptext"
        android:layout_marginTop="79dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/NAme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모둠원n :" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/GroupName"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:imeOptions="actionDone"
                android:text="Name" />

            <EditText
                android:id="@+id/GroupStory"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="응기잇 숙숙숙" />

        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/grouptext"
        android:onClick="AddEditText"
        android:text="Button" />

</RelativeLayout>
